---
const today = new Date();
const base = import.meta.env.BASE_URL;
---

<footer class="lf-footer">
	<div class="lf-footer__inner">
		<div class="lf-footer__brand">
			<img
				src={`${base}images/logo/LF_logo-mark.png`}
				alt="Lessico Familiare"
				class="lf-footer__logo"
				loading="lazy"
			/>
			<div class="lf-footer__links">
				<p class="lf-footer__name">Lessico Familiare</p>
				<p class="lf-footer__tagline">Studio di psicoterapia</p>
			</div>
		</div>

		<div class="lf-footer__cols">
			<div class="lf-footer__contact">
				<p class="lf-footer__title">Contatti</p>
				<a href="mailto:info@lessicofamiliare.it">info@lessicofamiliare.it</a>
				<div class="lf-footer__contact-row">
					<a href="tel:+393339361521">+39 333 936 1521</a>
					<a
						class="lf-footer__wa"
						href="https://wa.me/393339361521"
						target="_blank"
						rel="noreferrer"
						aria-label="WhatsApp 333 936 1521"
					>
						<img
							src={`${base}images/logo/Social/logo-whatsapp.webp`}
							alt=""
							class="lf-footer__wa-icon"
							loading="lazy"
						/>
					</a>
				</div>
				<div class="lf-footer__contact-row">
					<a href="tel:+393469460897">+39 346 946 0897</a>
					<a
						class="lf-footer__wa"
						href="https://wa.me/393469460897"
						target="_blank"
						rel="noreferrer"
						aria-label="WhatsApp 346 946 0897"
					>
						<img
							src={`${base}images/logo/Social/logo-whatsapp.webp`}
							alt=""
							class="lf-footer__wa-icon"
							loading="lazy"
						/>
					</a>
				</div>
				<span>Roma · Bari · Online</span>
			</div>
			<div class="lf-footer__links">
				<p class="lf-footer__title">Link rapidi</p>
				<a href="/chi-siamo">Chi siamo</a>
				<a href="/metodo">Metodo</a>
				<a href="/servizi">Servizi</a>
				<a href="/blog">Blog</a>
			</div>
			<div class="lf-footer__social-col">
				<p class="lf-footer__title">Social</p>
				<div class="lf-footer__social">
					<a href="https://www.instagram.com/lessicofamiliare_" target="_blank" rel="noreferrer" aria-label="Instagram">
						<img
							src={`${base}images/logo/Social/ig.png`}
							alt=""
							class="lf-footer__social-icon"
							loading="lazy"
						/>
					</a>
					<a href="https://www.facebook.com/profile.php?id=100063841042838" target="_blank" rel="noreferrer" aria-label="Facebook">
						<img
							src={`${base}images/logo/Social/fb.png`}
							alt=""
							class="lf-footer__social-icon"
							loading="lazy"
						/>
					</a>
					<a
						href={`${base}rss.xml`}
						class="lf-footer__rss"
						aria-label="RSS"
					>
						<img
							src={`${base}images/logo/Social/rss-logo.png`}
							alt=""
							class="lf-footer__social-icon lf-footer__rss-icon"
							loading="lazy"
						/>
					</a>
				</div>
			</div>
		</div>
	</div>

	<div class="lf-footer__bottom">
		<span>&copy; {today.getFullYear()} Lessico Familiare</span>
		<div class="lf-footer__legal">
			<a href={`${base}privacy-policy`}>Privacy</a>
			<a href={`${base}cookie-policy`}>Cookie</a>
			<a href={`${base}note-legali`}>Note legali</a>
		</div>
	</div>
</footer>

<style>
	.lf-footer {
		background: var(--brand);
		color: #fff;
		padding: 3rem 1.5rem 2rem;
	}
	.lf-footer__inner {
		max-width: 1100px;
		margin: 0 auto;
		display: grid;
		gap: 2rem;
	}
	.lf-footer__brand {
		display: flex;
		align-items: center;
		gap: 0.9rem;
	}
	.lf-footer__logo {
		width: 56px;
		height: 56px;
		object-fit: contain;
		background: #fff;
		border-radius: 999px;
		padding: 6px;
	}
	.lf-footer__name {
		font-weight: 700;
		font-size: 1.1rem;
		margin: 0;
	}
	.lf-footer__tagline {
		margin: 0.2rem 0 0;
		font-size: 0.9rem;
		color: rgba(255, 255, 255, 0.8);
	}
	.lf-footer__cols {
		display: grid;
		gap: 1.5rem;
		grid-template-columns: 1fr auto;
	}
	.lf-footer__links {
		display: none;
	}
	.lf-footer__social-col {
		justify-self: end;
	}
	.lf-footer__cols a,
	.lf-footer__cols span {
		display: block;
		color: rgba(255, 255, 255, 0.9);
		text-decoration: none;
		font-size: 0.95rem;
		margin-top: 0.35rem;
	}
	.lf-footer__contact-row {
		display: flex;
		align-items: center;
		gap: 0.45rem;
		margin-top: 0.35rem;
	}
	.lf-footer__contact-row a {
		margin-top: 0;
	}
	.lf-footer__wa {
		display: inline-flex;
		align-items: center;
		justify-content: center;
	}
	.lf-footer__wa-icon {
		width: 17px;
		height: 17px;
		filter: brightness(0) invert(1);
	}
	.lf-footer__cols a:hover {
		color: #fff;
	}
	.lf-footer__social {
		display: grid;
		gap: 0.5rem;
		margin-top: 0.35rem;
	}
	.lf-footer__social-icon {
		width: 35px;
		height: 35px;
		display: block;
		filter: brightness(0) invert(1);
	}
	.lf-footer__rss {
		display: none;
	}
	.lf-footer__rss-icon {
		filter: brightness(0) invert(1);
	}
	.lf-footer__title {
		font-weight: 700;
		letter-spacing: 0.08em;
		text-transform: uppercase;
		font-size: 0.75rem;
		margin: 0 0 0.4rem;
		color: rgba(255, 255, 255, 0.7);
	}
	.lf-footer__bottom {
		border-top: 1px solid rgba(255, 255, 255, 0.18);
		margin-top: 2rem;
		padding-top: 1.25rem;
		display: flex;
		flex-direction: column;
		gap: 0.6rem;
		max-width: 1100px;
		margin-left: auto;
		margin-right: auto;
		font-size: 0.85rem;
		color: rgba(255, 255, 255, 0.8);
	}
	.lf-footer__legal {
		display: none;
		gap: 1rem;
		flex-wrap: wrap;
	}
	.lf-footer__legal a {
		color: rgba(255, 255, 255, 0.85);
		text-decoration: none;
	}
	.lf-footer__legal a:hover {
		color: #fff;
	}
	@media (min-width: 820px) {
		.lf-footer__inner {
			grid-template-columns: 1fr 2fr;
			align-items: start;
		}
		.lf-footer__cols {
			grid-template-columns: repeat(3, minmax(0, 1fr));
		}
		.lf-footer__links {
			display: block;
		}
		.lf-footer__social-col {
			justify-self: start;
		}
		.lf-footer__bottom {
			flex-direction: row;
			justify-content: space-between;
			align-items: center;
		}
		.lf-footer__legal {
			display: flex;
		}
		.lf-footer__rss {
			display: inline-flex;
		}
	}
</style>
