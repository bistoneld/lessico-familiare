---
const today = new Date();
const base = import.meta.env.BASE_URL;
---

<footer class="lf-footer">
	<div class="lf-footer__inner">
		<div class="lf-footer__brand">
			<img
				src={`${base}images/logo/LF_logo-mark.png`}
				alt="Lessico Familiare"
				class="lf-footer__logo"
				loading="lazy"
			/>
			<div>
				<p class="lf-footer__name">Lessico Familiare</p>
				<p class="lf-footer__tagline">Studio di psicoterapia</p>
			</div>
		</div>

		<div class="lf-footer__cols">
			<div>
				<p class="lf-footer__title">Contatti</p>
				<a href="mailto:info@lessicofamiliare.it">info@lessicofamiliare.it</a>
				<a href="tel:+390000000000">+39 000 000 0000</a>
				<span>Milano e dintorni Â· online</span>
			</div>
			<div>
				<p class="lf-footer__title">Link rapidi</p>
				<a href="/chi-siamo">Chi siamo</a>
				<a href="/metodo">Metodo</a>
				<a href="/servizi">Servizi</a>
				<a href="/blog">Blog</a>
			</div>
			<div>
				<p class="lf-footer__title">Social</p>
				<a href="#" target="_blank">Instagram</a>
				<a href="#" target="_blank">Facebook</a>
				<a href="#" target="_blank">LinkedIn</a>
			</div>
		</div>
	</div>

	<div class="lf-footer__bottom">
		<span>&copy; {today.getFullYear()} Lessico Familiare</span>
		<div class="lf-footer__legal">
			<a href="#">Privacy</a>
			<a href="#">Cookie</a>
			<a href="#">Note legali</a>
		</div>
	</div>
</footer>

<style>
	.lf-footer {
		background: var(--brand);
		color: #fff;
		padding: 3rem 1.5rem 2rem;
	}
	.lf-footer__inner {
		max-width: 1100px;
		margin: 0 auto;
		display: grid;
		gap: 2rem;
	}
	.lf-footer__brand {
		display: flex;
		align-items: center;
		gap: 0.9rem;
	}
	.lf-footer__logo {
		width: 56px;
		height: 56px;
		object-fit: contain;
		background: #fff;
		border-radius: 999px;
		padding: 6px;
	}
	.lf-footer__name {
		font-weight: 700;
		font-size: 1.1rem;
		margin: 0;
	}
	.lf-footer__tagline {
		margin: 0.2rem 0 0;
		font-size: 0.9rem;
		color: rgba(255, 255, 255, 0.8);
	}
	.lf-footer__cols {
		display: grid;
		gap: 1.5rem;
	}
	.lf-footer__cols > div:not(:first-child) {
		display: none;
	}
	.lf-footer__cols a,
	.lf-footer__cols span {
		display: block;
		color: rgba(255, 255, 255, 0.9);
		text-decoration: none;
		font-size: 0.95rem;
		margin-top: 0.35rem;
	}
	.lf-footer__cols a:hover {
		color: #fff;
	}
	.lf-footer__title {
		font-weight: 700;
		letter-spacing: 0.08em;
		text-transform: uppercase;
		font-size: 0.75rem;
		margin: 0 0 0.4rem;
		color: rgba(255, 255, 255, 0.7);
	}
	.lf-footer__bottom {
		border-top: 1px solid rgba(255, 255, 255, 0.18);
		margin-top: 2rem;
		padding-top: 1.25rem;
		display: flex;
		flex-direction: column;
		gap: 0.6rem;
		max-width: 1100px;
		margin-left: auto;
		margin-right: auto;
		font-size: 0.85rem;
		color: rgba(255, 255, 255, 0.8);
	}
	.lf-footer__legal {
		display: none;
		gap: 1rem;
		flex-wrap: wrap;
	}
	.lf-footer__legal a {
		color: rgba(255, 255, 255, 0.85);
		text-decoration: none;
	}
	.lf-footer__legal a:hover {
		color: #fff;
	}
	@media (min-width: 820px) {
		.lf-footer__inner {
			grid-template-columns: 1fr 2fr;
			align-items: start;
		}
		.lf-footer__cols {
			grid-template-columns: repeat(3, minmax(0, 1fr));
		}
		.lf-footer__cols > div:not(:first-child) {
			display: block;
		}
		.lf-footer__bottom {
			flex-direction: row;
			justify-content: space-between;
			align-items: center;
		}
		.lf-footer__legal {
			display: flex;
		}
	}
</style>
