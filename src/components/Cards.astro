---
const { items } = Astro.props;
const base = import.meta.env.BASE_URL;
const getImageBase = (image, imageBase) => {
  if (imageBase) return imageBase;
  if (!image) return null;
  const clean = image.split("?")[0];
  const match = clean.match(/\/([^/]+)\.(png|jpe?g|webp|avif)$/i);
  if (!match) return null;
  return `${base}images/opt/${match[1]}`;
};
---

<div class="mt-8 grid gap-5 md:grid-cols-2">
  {items.map((item) => (
    <a
      href={item.href}
      class="group relative overflow-hidden rounded-2xl border border-slate-200 bg-white transition hover:-translate-y-0.5 hover:shadow-md"
    >
      <div class="relative aspect-[16/9] overflow-hidden bg-slate-100">
        {(() => {
          const imageBase = getImageBase(item.image, item.imageBase);
          if (!imageBase) {
            return (
              <img
                src={item.image}
                alt={item.title}
                class="h-full w-full object-cover transition duration-700 group-hover:scale-105"
                loading="lazy"
                decoding="async"
              />
            );
          }
          return (
            <picture>
              <source
                type="image/avif"
                srcset={`${imageBase}-640.avif 640w, ${imageBase}-1280.avif 1280w, ${imageBase}-1920.avif 1920w`}
                sizes="(max-width: 768px) 100vw, 50vw"
              />
              <source
                type="image/webp"
                srcset={`${imageBase}-640.webp 640w, ${imageBase}-1280.webp 1280w, ${imageBase}-1920.webp 1920w`}
                sizes="(max-width: 768px) 100vw, 50vw"
              />
              <img
                src={`${imageBase}-1280.webp`}
                alt={item.title}
                class="h-full w-full object-cover transition duration-700 group-hover:scale-105"
                loading="lazy"
                decoding="async"
              />
            </picture>
          );
        })()}
        <div
          class="absolute inset-0 opacity-80 transition group-hover:opacity-90"
          style={`background: linear-gradient(120deg, ${item.accent}cc, rgba(0,0,0,0.15));`}
        ></div>
      </div>
      <div class="p-5">
        <h3 class="text-lg font-semibold" style="color: var(--brand-dark);">{item.title}</h3>
        <p class="mt-2 text-sm text-slate-600" style="color: var(--brand-dark);">{item.description}</p>
      </div>
      <div
        class="pointer-events-none absolute inset-x-0 bottom-0 h-1 opacity-0 transition group-hover:opacity-100"
        style={`background: ${item.accent};`}
      ></div>
    </a>
  ))}
</div>
