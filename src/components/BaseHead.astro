---
// Import the global.css file here so that it is included on
// all pages through the use of the <BaseHead/> component.
import '../styles/global.css';
import type { ImageMetadata } from 'astro';
import FallbackImage from '../assets/blog-placeholder-1.jpg';
import { SITE_TITLE } from '../consts';

interface Props {
	title: string;
	description: string;
	image?: ImageMetadata;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const base = import.meta.env.BASE_URL;

const { title, description, image = FallbackImage } = Astro.props;
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`} />
<link rel="sitemap" href={`${base}sitemap-index.xml`} />
<link
	rel="alternate"
	type="application/rss+xml"
	title={SITE_TITLE}
	href={new URL('rss.xml', Astro.site)}
/>
<meta name="generator" content={Astro.generator} />

<!-- Font preconnects -->
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link
	rel="stylesheet"
	href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300..700&display=swap"
/>

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={new URL(image.src, Astro.url)} />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={new URL(image.src, Astro.url)} />

<!-- Netlify Identity widget: caricato solo quando serve (invite/recovery/confirmation) -->
<script is:inline>
  (() => {
    try {
      console.log("[Identity] head script loaded");
      console.log("[Identity] href:", window.location.href);
      console.log("[Identity] pathname:", window.location.pathname);
      console.log("[Identity] hash:", window.location.hash);

      const hash = window.location.hash || "";
      const hasToken =
        hash.includes("invite_token=") ||
        hash.includes("recovery_token=") ||
        hash.includes("confirmation_token=");

      console.log("[Identity] hasToken:", hasToken);

      if (!hasToken) {
        console.log("[Identity] stop: no token in hash");
        return;
      }

      if (window.location.pathname.startsWith("/admin")) {
        console.log("[Identity] stop: already in /admin");
        return;
      }

      const splash = document.querySelector(".logo-splash");
      console.log("[Identity] splash found:", !!splash);

      if (splash) {
        splash.style.display = "none";
        splash.style.pointerEvents = "none";
      }
      document.documentElement.classList.remove("has-splash");
      document.body.style.overflow = "";

      console.log("[Identity] loading widget script...");

      const s = document.createElement("script");
      s.src = "https://identity.netlify.com/v1/netlify-identity-widget.js";
      s.async = true;

      s.onload = () => {
        console.log("[Identity] widget script loaded");

        const ni = window.netlifyIdentity;
        console.log("[Identity] window.netlifyIdentity present:", !!ni);

        if (!ni) {
          console.log("[Identity] stop: netlifyIdentity missing after load");
          return;
        }

        ni.on("login", () => {
          console.log("[Identity] event: login -> redirect to /admin/");
          window.location.href = "/admin/";
        });

        // opzionale: logga anche init (utile per capire se arriva)
        ni.on("init", (user) => {
          console.log("[Identity] event: init. user:", user ? "present" : "null");
        });

        console.log("[Identity] calling ni.init()");
        ni.init();

        console.log("[Identity] calling ni.open()");
        ni.open();
      };

      s.onerror = (e) => {
        console.log("[Identity] ERROR loading widget script", e);
      };

      document.head.appendChild(s);
      console.log("[Identity] widget script appended to head");
    } catch (err) {
      console.log("[Identity] ERROR in identity handler", err);
    }
  })();
</script>

