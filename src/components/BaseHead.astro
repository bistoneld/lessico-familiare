---
// Import the global.css file here so that it is included on
// all pages through the use of the <BaseHead/> component.
import "../styles/global.css";
import FallbackImage from "../assets/blog-placeholder-1.jpg";
import { SITE_TITLE } from "../consts";

interface Props {
  title: string;
  description: string;
}

const base = import.meta.env.BASE_URL;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const stripBase = (pathname: string) => {
  if (!base || base === "/") return pathname;
  const baseNoSlash = base.endsWith("/") ? base.slice(0, -1) : base;
  if (pathname.startsWith(baseNoSlash)) {
    const stripped = pathname.slice(baseNoSlash.length);
    return stripped || "/";
  }
  return pathname;
};

const relativePath = stripBase(Astro.url.pathname);
const key =
  relativePath === "/" ? "home" : relativePath.replace(/^\/|\/$/g, "");
const ogUrl = new URL(
  `${base}og/${key}.png`,
  Astro.site ?? Astro.url
).toString();
const fallbackOg = new URL(FallbackImage.src, Astro.url).toString();
const ogKnown = new Set([
  "home",
  "blog",
  "chi-siamo",
  "metodo",
  "servizi",
  "servizi/consulenza",
  "servizi/famiglia",
  "servizi/scuole",
  "servizi/territori",
  "prodotti",
  "reti",
  "contatti",
  "contatti-grazie",
  "contatti-errore",
  "privacy-policy",
  "cookie-policy",
  "note-legali",
  "about",
]);
const socialImage =
  key.startsWith("blog/") || ogKnown.has(key) ? ogUrl : fallbackOg;

const { title, description } = Astro.props;
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`} />
<link rel="sitemap" href={`${base}sitemap-index.xml`} />
<link
  rel="alternate"
  type="application/rss+xml"
  title={SITE_TITLE}
  href={new URL("rss.xml", Astro.site)}
/>
<meta name="generator" content={Astro.generator} />

<!-- Font preconnects -->
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link
  rel="stylesheet"
  href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300..700&display=swap"
/>

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={canonicalURL} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={socialImage} />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={canonicalURL} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={socialImage} />

