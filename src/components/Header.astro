---
const nav = [
  { label: 'Chi siamo', href: '/chi-siamo' },
  { label: 'Metodo', href: '/metodo' },
  { label: 'Servizi', href: '/servizi'},
  { label: 'Blog', href: '/blog' },
];

const base = import.meta.env.BASE_URL;
---

<header class="sticky top-0 z-50 bg-white/85 backdrop-blur border-b border-slate-200">
  <div class="mx-auto max-w-5xl px-4">
    <div class="flex h-16 items-center justify-between gap-4">
      <!-- Brand -->
      <a href="/" class="flex items-center gap-3 min-w-0">
        <img
          src={`${base}images/logo/LF_logo-mark.png`}
          alt="Lessico Familiare"
          class="h-12 w-12 object-contain"
          loading="eager"
        />
        <div class="min-w-0">
          <div class="truncate text-sm font-semibold tracking-wide" style="color: var(--brand-dark);">
            Lessico Familiare
          </div>
          <div class="truncate text-xs text-slate-500">
            Studio di psicoterapia
          </div>
        </div>
      </a>

      <!-- Desktop nav -->
      <nav class="hidden md:flex items-center gap-1">
        {nav.map((item) => (
          <a
            href={item.href}
            class="rounded-lg px-3 py-2 text-sm font-semibold text-slate-700 hover:text-slate-900 hover:bg-slate-100 transition"
          >
            {item.label}
          </a>
        ))}
      </nav>

      <!-- Actions -->
      <div class="flex items-center gap-2">
        <a
          href="/contatti"
          class="!text-white hidden sm:inline-flex items-center justify-center rounded-xl px-4 py-2 text-sm font-semibold text-white hover:opacity-90 transition"
          style="background: var(--brand);"
        >
          Contattaci
        </a>

        <!-- Mobile menu (simple) -->
        <details class="md:hidden relative">
          <summary class="list-none inline-flex items-center justify-center rounded-xl border border-slate-300 px-3 py-2 text-sm font-semibold text-slate-700 hover:border-slate-400 transition cursor-pointer">
            Menu
          </summary>
          <div class="absolute right-0 mt-2 w-56 overflow-hidden rounded-2xl border border-slate-200 bg-white shadow-lg">
            <div class="p-2">
              {nav.map((item) => (
                <a
                  href={item.href}
                  class="block rounded-xl px-3 py-2 text-sm font-semibold text-slate-700 hover:bg-slate-100 transition"
                >
                  {item.label}
                </a>
              ))}
              <a
                href="/contatti"
                class="mt-2 block rounded-xl px-3 py-2 text-sm font-semibold text-white text-center hover:opacity-90 transition"
                style="background: var(--brand);"
              >
                Contattaci
              </a>
            </div>
          </div>
        </details>
      </div>
    </div>
  </div>
</header>
