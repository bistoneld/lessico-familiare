---
const { groups } = Astro.props;
const base = import.meta.env.BASE_URL;
const getImageBase = (image, imageBase) => {
  if (imageBase) return imageBase;
  if (!image) return null;
  const clean = image.split("?")[0];
  const match = clean.match(/\/([^/]+)\.(png|jpe?g|webp|avif)$/i);
  if (!match) return null;
  return `${base}images/opt/${match[1]}`;
};
---

<div class="mt-8 grid gap-6 md:grid-cols-2">
  {groups.map((group) => (
    <div class="group relative overflow-hidden rounded-2xl border border-slate-200 bg-white shadow-sm transition hover:-translate-y-0.5 hover:shadow-md">
      <div class="relative aspect-[16/6] overflow-hidden">
        {(() => {
          const imageBase = getImageBase(group.image, group.imageBase);
          if (!imageBase) {
            return (
              <img
                src={group.image}
                alt={group.title}
                class="h-full w-full object-cover transition duration-700 group-hover:scale-105"
                loading="lazy"
                decoding="async"
              />
            );
          }
          return (
            <picture>
              <source
                type="image/avif"
                srcset={`${imageBase}-640.avif 640w, ${imageBase}-1280.avif 1280w, ${imageBase}-1920.avif 1920w`}
                sizes="(max-width: 768px) 100vw, 50vw"
              />
              <source
                type="image/webp"
                srcset={`${imageBase}-640.webp 640w, ${imageBase}-1280.webp 1280w, ${imageBase}-1920.webp 1920w`}
                sizes="(max-width: 768px) 100vw, 50vw"
              />
              <img
                src={`${imageBase}-1280.webp`}
                alt={group.title}
                class="h-full w-full object-cover transition duration-700 group-hover:scale-105"
                loading="lazy"
                decoding="async"
              />
            </picture>
          );
        })()}
        <div
          class="absolute inset-0 opacity-80 transition group-hover:opacity-90"
          style={`background: linear-gradient(120deg, ${group.accent}cc, rgba(0,0,0,0.15));`}
        ></div>
        <div class="absolute inset-0 flex items-end p-4 sm:p-5">
          <div class="text-white">
            <p class="text-xs font-semibold uppercase tracking-[0.2em] opacity-90" style="color: var(--bg-soft); text-shadow: 0 2px 8px rgba(0,0,0,0.45)">
              Categoria
            </p>
            <h4 class="text-xl font-semibold" style="color: var(--bg-soft); text-shadow: 0 2px 8px rgba(0,0,0,0.45);">
              {group.title}
            </h4>
          </div>
        </div>
      </div>

      <ul class="p-5 grid gap-3">
        {group.items.map((item) => (
          <li>
            <a
              href={item.href}
              class="flex items-center justify-between rounded-xl border border-slate-100 bg-white/70 px-4 py-3 text-sm font-semibold text-slate-700 transition hover:border-slate-200 hover:bg-slate-50 hover:text-slate-900"
            >
              <span style="color: var(--brand-dark)">{item.name}</span>
              <span class="text-xs text-slate-400">Partner</span>
            </a>
          </li>
        ))}
      </ul>

      <div
        class="pointer-events-none absolute inset-x-0 bottom-0 h-1 opacity-0 transition group-hover:opacity-100"
        style={`background: ${group.accent};`}
      ></div>
    </div>
  ))}
</div>
